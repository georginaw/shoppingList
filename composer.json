{
    "name": "slim/slim-skeleton",
    "description": "A shopping list app",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "https://github.com/georginaw/shoppingList",
    "license": "MIT",
    "authors": [
        {
            "name": "Georgina Watson",
            "email": "gwatson.developer@gmail.com",
            "homepage": "https://georginaw.github.io/"
        }
    ],
    "require": {
        "php": ">=5.6",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "autoload": {
        "psr-4": {
            "ShoppingList\\": "src/classes/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
